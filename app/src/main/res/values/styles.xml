<resources>

    <!-- Base application theme. -->
    <style name="ThemeDefault" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--ActionBar的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 随主题而改变的颜色（如CheckBox的颜色）-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--ActionBar标题文字颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- 去掉actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/TranAnimation</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ThemeNight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--ActionBar的颜色-->
        <item name="colorPrimary">@color/color_0176da</item>
        <!--状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/color_005eaa</item>
        <!-- 随主题而改变的颜色（如CheckBox的颜色）-->
        <item name="colorAccent">@color/color_2095f2</item>
        <!--ActionBar标题文字颜色-->
        <item name="android:textColorPrimary">@color/gray</item>
        <!-- 去掉actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/TranAnimation</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="TranAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
    </style>


    <style name="startupTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/startup</item>
    </style>

    <style name="MyToggleButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:button">@drawable/setting_checkbox_button</item>
    </style>

    <style name="circleProgressBarStyle">
        <item name="android:indeterminateDrawable">@drawable/rotate_loading_icon</item>
        <item name="android:indeterminateDuration">1500</item>
　　     <item name="android:minWidth">50dip</item>
　　     <item name="android:maxWidth">50dip</item>
　　     <item name="android:minHeight">50dip</item>
　　     <item name="android:maxHeight">50dip</item>
    </style>

    <style name="loading_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

</resources>
